<!DOCTYPE html>
<html>
  <head>
    <title>ClientProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <%= form_tag("/search", method: "get") do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag("Search")%>
      <%end%>
    </header>
    <%= yield %>
  </body>
</html>
