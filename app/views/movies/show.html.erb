  <h1><%=@movie.title%></h1>


<div class="movie-show valign-wrapper">

  <img class="left-align" src="<%=@movie.data(:poster)%>" >
  <p style="text-align:center;"><%=@movie.data(:plot)%></p>
</div>


<br>
<table>
  <%if user_signed_in?%>
    <tr><%= button_to (check_favorite(@movie) ? "Remove from Favorites" : "Add to Favorites"), action: "favorite" %></tr>
    <tr><%= button_to (check_watchlist(@movie) ? "Remove from Watchlist" : "Add to Watchlist"), action: "watchlist" %></tr>
  <% elsif %>
    <tr><%= button_to "Add to Favorites", new_user_session_path %></tr>
    <tr><%= button_to "Add to Watchlist", new_user_session_path %></tr>
  <% end %>
</table>



